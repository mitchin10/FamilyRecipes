<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @family_recipe.title %>
</p>

<p>
  <strong>Category:</strong>
  <%= @family_recipe.category %>
</p>

<p>
  <strong>Short description:</strong>
  <%= @family_recipe.short_description %>
</p>

<p>
  <strong>Country:</strong>
  <%= @family_recipe.country %>
</p>

<p>
  <strong>Long description:</strong>
  <%= @family_recipe.long_description %>
</p>

<h3>Ingredients</h3>
<div class="">
  <% @family_recipe.ingredients.each do |i| %>
    <ul>
      <li><%= i.ingredient %></li>
      <li><%= i.done %></li>
    </ul>
  <% end %>
</div>

<h3>Cooking Directions</h3>
<div class="">
  <% if @family_recipe.cooking_directions.size <= 0 %>
    <p>...Not yet available...</p>
  <% else %>
    <% @family_recipe.cooking_directions.each do |step| %>
    <ul>
      <li><%= step.step %></li>
      <li><%= step.direction %></li>
    </ul>
    <% end %>
  <% end %>
</div>

<%= link_to 'Edit', edit_family_recipe_path(@family_recipe) %> |
<%= link_to 'Back', family_recipes_path %>
